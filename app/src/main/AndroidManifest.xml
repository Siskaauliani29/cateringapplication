<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cateringapplication">

    <application
        android:allowBackup="true"
        android:label="Catering Application"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AplikasiCatering">

        <!-- Aktivitas yang pertama dibuka -->
        <activity android:name=".LoginActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Aktivitas lain -->
        <activity android:name=".MainActivity" android:exported="true" />
        <activity android:name=".MenuActivity" android:exported="true" />
        <activity android:name=".CheckoutActivity" android:exported="true" />
        <activity android:name=".OrdersActivity" android:exported="true" />

    </application>

</manifest>
