<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7"
    android:padding="24dp">

    <!-- Judul -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_orders"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins_bold" />

    <!-- Daftar Pesanan -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPesanan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_recycler_rounded"
        android:padding="12dp"
        android:clipToPadding="false"
        android:contentDescription="@string/your_orders" />

    <!-- Total Harga -->
    <TextView
        android:id="@+id/txtTotalHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: Rp0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:gravity="end"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_medium" />

    <!-- Tombol Lihat Menu -->
    <Button
        android:id="@+id/btnViewMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_menu"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/btn_purple"
        android:textColor="@android:color/white"
        android:padding="14dp" />

    <!-- Tombol Konfirmasi -->
    <Button
        android:id="@+id/btnKonfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bayar"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/btn_green"
        android:textColor="@android:color/white"
        android:padding="14dp"
        android:layout_marginTop="12dp" />

</LinearLayout>
